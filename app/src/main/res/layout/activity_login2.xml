<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp">

                <FrameLayout
                    android:layout_width="91dp"
                    android:layout_height="93dp"
                    android:layout_gravity="center"

                    android:layout_marginBottom="20dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="89dp"
                        android:layout_height="90dp"
                        android:src="@drawable/safeher_icon" />
                </FrameLayout>

                <TextView
                    android:text="SafeHer"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/backgroundndEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Welcome back! Sign in to continue"
                    android:textColor="@color/textSecondary"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Form -->
            <!-- Email Input -->
            <TextView
                android:text="Email"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/surface"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="4dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/border"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/email"
                    app:tint="@color/textSecondary"
                    android:layout_marginRight="8dp"/>
                <EditText
                    android:id="@+id/emailEdit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Enter your email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/text"
                    android:textColorHint="@color/textSecondary"
                    android:maxLines="1"
                    android:singleLine="true"/>
            </LinearLayout>

            <!-- Password Input -->
            <TextView
                android:text="Password"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/surface"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="4dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/border">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="29dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/log_icon"
                    app:tint="@color/textSecondary" />
                <EditText
                    android:id="@+id/passwordEdit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Enter your password"
                    android:inputType="textPassword"
                    android:textColor="@color/text"
                    android:textColorHint="@color/textSecondary"
                    android:maxLines="1"
                    android:singleLine="true"/>

            </LinearLayout>

            <!-- Login Button -->
            <Button
                android:id="@+id/loginBtn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Sign In"
                android:backgroundTint="@color/primaryPink"
                android:textColor="@android:color/white"
                android:layout_marginTop="12dp"/>

            <!-- Divider -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="32dp">
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"
                    android:background="@color/border"/>
                <TextView
                    android:text="or"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"
                    android:background="@color/border"/>
            </LinearLayout>

            <!-- Sign Up Link -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:text="Don't have an account?"
                    android:textSize="15sp"
                    android:textColor="@color/textSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/signupLink"
                    android:text="Sign Up"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"/>
            </LinearLayout>

            <!-- Footer -->
            <TextView
                android:text="By signing in, you agree to our Terms of Service and Privacy Policy"
                android:textSize="12sp"
                android:textColor="@color/textSecondary"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:paddingTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>