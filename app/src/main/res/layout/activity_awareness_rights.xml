<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AwarenessRightsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- BOUTON RETOUR -->
            <Button
                android:id="@+id/back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="←"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:background="@android:color/transparent"
                android:layout_gravity="start"
                android:layout_marginBottom="8dp"/>

            <!-- SECTION 1 - Your Rights -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_scale"
                            app:tint="@color/colorPrimary"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:text="Your Rights"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <TextView android:text="• You have the right to feel safe in public spaces"
                        android:textSize="14sp" android:textColor="@color/textSecondary"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="• You have the right to say no and set boundaries"
                        android:textSize="14sp" android:textColor="@color/textSecondary"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="• You have the right to report harassment without fear"
                        android:textSize="14sp" android:textColor="@color/textSecondary"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="• You have the right to legal protection and support"
                        android:textSize="14sp" android:textColor="@color/textSecondary"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="• You have the right to be believed and supported"
                        android:textSize="14sp" android:textColor="@color/textSecondary"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SECTION 2 - Safety Tips -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_shieled"
                            app:tint="@color/colorSuccess"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:text="Safety Tips"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <TextView android:text="• Trust your instincts - if something feels wrong, it probably is"
                        android:textSize="14sp" android:textColor="@color/textSecondary"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="• Stay aware of your surroundings, especially at night"
                        android:textSize="14sp" android:textColor="@color/textSecondary"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="• Share your location with trusted contacts when traveling alone"
                        android:textSize="14sp" android:textColor="@color/textSecondary"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="• Keep your phone charged and easily accessible"
                        android:textSize="14sp" android:textColor="@color/textSecondary"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="• Walk confidently and avoid isolated areas when possible"
                        android:textSize="14sp" android:textColor="@color/textSecondary"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="• Have emergency numbers saved and easily accessible"
                        android:textSize="14sp" android:textColor="@color/textSecondary"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SECTION 3 - Recognizing Harassment -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_exclamation"
                            app:tint="@color/colorWarning"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:text="Recognizing Harassment"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <TextView android:text="• Unwanted comments about appearance or body"
                        android:textSize="14sp" android:textColor="@color/textSecondary"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="• Following or stalking behavior"
                        android:textSize="14sp" android:textColor="@color/textSecondary"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="• Unwanted physical contact or invasion of personal space"
                        android:textSize="14sp" android:textColor="@color/textSecondary"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="• Sexual gestures or inappropriate advances"
                        android:textSize="14sp" android:textColor="@color/textSecondary"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="• Persistent unwanted attention after being told to stop"
                        android:textSize="14sp" android:textColor="@color/textSecondary"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="• Taking photos or videos without consent"
                        android:textSize="14sp" android:textColor="@color/textSecondary"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SECTION 4 - What To Do -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_hand_raised"
                            app:tint="@color/colorError"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:text="What To Do"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <TextView android:text="• Remove yourself from the situation if possible"
                        android:textSize="14sp" android:textColor="@color/textSecondary"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="• Clearly say 'No' or 'Stop' if you feel safe doing so"
                        android:textSize="14sp" android:textColor="@color/textSecondary"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="• Seek help from nearby people or businesses"
                        android:textSize="14sp" android:textColor="@color/textSecondary"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="• Document the incident (time, place, description)"
                        android:textSize="14sp" android:textColor="@color/textSecondary"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="• Report to authorities if you feel threatened"
                        android:textSize="14sp" android:textColor="@color/textSecondary"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="• Reach out to support services for help"
                        android:textSize="14sp" android:textColor="@color/textSecondary"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SECTION 5 - Supporting Others -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_heart"
                            app:tint="@color/colorHighlight"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:text="Supporting Others"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <TextView android:text="• Believe and validate their experience"
                        android:textSize="14sp" android:textColor="@color/textSecondary"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="• Listen without judgment"
                        android:textSize="14sp" android:textColor="@color/textSecondary"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="• Offer practical support and resources"
                        android:textSize="14sp" android:textColor="@color/textSecondary"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/resources_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Support Resources"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:background="@color/colorPrimary"
                        android:layout_marginTop="20dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>