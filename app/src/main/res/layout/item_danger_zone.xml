<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="top">

        <!-- Warning Icon -->
        <ImageView
            android:id="@+id/warningIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_dialog_alert"
            app:tint="#FF9500"
            android:layout_marginEnd="16dp"/>

        <!-- Zone Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dangerLocationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom de la rue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2E2E2E"/>

            <TextView
                android:id="@+id/dangerTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type de danger"
                android:textSize="14sp"
                android:textColor="#696969"
                android:paddingTop="4dp"/>

            <TextView
                android:id="@+id/dangerDescriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description du danger"
                android:textSize="13sp"
                android:textColor="#888888"
                android:paddingTop="4dp"
                android:maxLines="2"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/dangerSeverityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moyen"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FF9500"
                    android:background="#FFF3E0"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/dangerTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Il y a 2 heures"
                    android:textSize="11sp"
                    android:textColor="#B0B0B0"
                    android:gravity="center_vertical"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Arrow Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_send"
            app:tint="#696969"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>