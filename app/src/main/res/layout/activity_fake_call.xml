<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Configuration Section -->
    <ScrollView
        android:id="@+id/setupLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fake Call"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generate a realistic fake incoming call to help you escape uncomfortable or dangerous situations discreetly."
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="24dp"/>

            <!-- Caller Name Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caller Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/callerNameInput"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Mom"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@android:color/white"
                android:textSize="16sp"
                android:layout_marginBottom="24dp"/>

            <!-- Delay Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delay (seconds)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/delayValueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 seconds"
                android:textSize="14sp"
                android:textColor="#9C27B0"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/delayEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Entrer le dÃ©lai en millisecondes"
                android:inputType="number"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="24dp"/>

            <!-- Quick Presets -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Presets"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp"/>

            <!-- Preset 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:clickable="true">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="ðŸ“±"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_marginRight="12dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mom - 5 seconds"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quick escape call"
                        android:textSize="14sp"
                        android:textColor="#666666"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Preset 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:clickable="true">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="ðŸ’¼"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_marginRight="12dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Work - 10 seconds"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Professional excuse"
                        android:textSize="14sp"
                        android:textColor="#666666"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Preset 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:clickable="true">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="ðŸš¨"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_marginRight="12dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emergency - 3 seconds"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Immediate escape"
                        android:textSize="14sp"
                        android:textColor="#666666"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Start Button -->
            <Button
                android:id="@+id/startCallBtn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Schedule Fake Call"
                android:textColor="@android:color/white"
                android:background="#9C27B0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"/>

            <!-- Tips Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#E1BEE7"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Tips for Using Fake Calls"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Set a short delay if you need to leave immediately"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Use a believable caller name for your situation"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Act naturally when the call comes in"
                    android:textSize="14sp"
                    android:textColor="#666666"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Incoming Call Screen -->
    <RelativeLayout
        android:id="@+id/incomingCallLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9C27B0"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:padding="40dp">

            <!-- Caller Icon -->
            <ImageView
                android:id="@+id/callerIcon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@android:drawable/ic_menu_call"
                android:background="#80FFFFFF"
                android:padding="30dp"
                android:layout_marginBottom="32dp"/>

            <!-- Caller Name -->
            <TextView
                android:id="@+id/incomingCallerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mom"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"/>

            <!-- Call Status -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Incoming call..."
                android:textSize="18sp"
                android:textColor="#E0E0E0"
                android:layout_marginBottom="60dp"/>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Decline Button -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="40dp">

                    <Button
                        android:id="@+id/declineBtn"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#F44336"
                        android:text="âœ•"
                        android:textSize="32sp"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Decline"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Accept Button -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <Button
                        android:id="@+id/acceptBtn"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#4CAF50"
                        android:text="âœ“"
                        android:textSize="32sp"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Answer"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>